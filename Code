import numpy as np
import matplotlib.pyplot as plt

# Tạo các giá trị x và y cho đường cong hình trái tim
t = np.linspace(0, 2 * np.pi, 1000)
x = 16 * np.sin(t) ** 3
y = 13 * np.cos(t) - 5 * np.cos(2 * t) - 2 * np.cos(3 * t) - np.cos(4 * t)

# Vẽ đường cong
plt.plot(x, y, color='red')

# Tạo tiêu đề và điều chỉnh kích thước biểu đồ
plt.title("Heart Shape", fontsize=14)
plt.gca().set_aspect('equal')

# Ẩn các trục
plt.axis('off')

# Hiển thị hình vẽ
plt.show()
